{
  "suggest.noselect": false,
  "suggest.autoTrigger": "always",
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.floatEnable": true,
  "suggest.echodocSupport": true,
  "suggest.snippetIndicator": "►",
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  "diagnostic.virtualText": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "rust",
    "go",
    "javascript",
    "typescript",
    "html",
    "json",
    "javascriptreact",
    "typescriptreact",
    "css",
    "scss",
    "sass",
    "python"
  ],
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json", ".vim/", ".git/"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        },
        "clang": {
          "extraArgs": [
            // from clang -v -fsyntax-only -x c++ /dev/null
            "-isystem/usr/local/include",
            "-isystem/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/../include/c++/v1",
            "-isystem/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/lib/clang/11.0.3/include",
            "-isystem/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr/include",
            "-isystem/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/include",
            "-isystem/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/System/Library/Frameworks"
          ],
          "pathMappings": [],
          // from clang -print-resource-dir
          "resourceDir": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/lib/clang/11.0.3/"
        },
        "highlight": {
          "lsRanges": true
        }
      }
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["tf", "terraform"],
      "initializationOptions": {},
      "settings": {}
    },
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["graphql", "typescript"]
    },
    "flux": {
      "command": "flux-lsp",
      "filetypes": ["flux"]
    }
  },
  "tsserver.log": "verbose",
  "prettier.singleQuote": true,
  "python.formatting.provider": "black",
  "python.analysis.useLibraryCodeForTypes": true,
  "yaml.schemas": {
    "kubernetes": "/*.yml"
  }
}
